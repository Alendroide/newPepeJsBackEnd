generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  img String?
  name String @unique
  bio String
  email String @unique
  password String
  created_at DateTime @default(now())
  posts Post[]
  comments Comment[]
}

model Post {
  id Int @id @default(autoincrement())
  title String @db.VarChar(100)
  body String @db.Text
  img String?
  created_at DateTime @default(now())
  userId Int
  user User @relation(fields: [userId], references: [id])
  comments Comment[]
  @@index([userId])
}

model Comment {
  id Int @id @default(autoincrement())
  comment String
  created_at DateTime @default(now())
  userId Int
  postId Int
  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [postId], references: [id])
}